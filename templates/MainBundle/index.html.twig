{% extends 'MainBundle/itemlist.html.twig' %}

{% block layout_buttons %}
    <h3 class="mb-4">Filters List</h3>
{% endblock %}

{% block table_layout %}
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Criteria</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for filter in filters %}
            <tr class="criteria-item">
                <td>{{ filter.name }}</td>
                <td>{{ filter.criteria }}</td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm edit-filter"
                            data-filter-id="{{ filter.id }}" data-bs-toggle="modal"
                            data-bs-target="#editFilterModal">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                    <a class="btn btn-danger btn-sm remove-filter" data-bs-target="{{ filter.id }}" title="Delete">
                        <i class="bi bi-pencil"></i> Remove
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block table_buttons %}
    <div class="d-flex gap-2 mt-3">
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#filterModal">
            Add New Filter
        </button>
    </div>
{% endblock %}

{% block modal_layout %}
    {% include 'MainBundle/new_filter.modal.html.twig' with {filters: filters} %}
    {% include 'MainBundle/edit_filter.modal.html.twig' with {filters: filters} %}
    {% include 'MainBundle/confirm_delete.html.twig' %}
{% endblock %}
