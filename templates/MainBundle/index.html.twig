{% extends 'MainBundle/itemlist.html.twig' %}

{% block layout_buttons %}
    <h3 class="mb-4">Filters List</h3>
{% endblock %}

{% block table_layout %}
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Criteria</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for filter in filters %}
            <tr>
                <td>{{ filter.name }}</td>
                <td>{{ filter.criteria }}</td>
                <td>
                    <a class="btn btn-warning btn-sm" title="Edit" href="{{ path('edit_filter', {id: filter.id}) }}">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block table_buttons %}
    <div class="d-flex gap-2 mt-3">
        <a href="{{ path('new_filter') }}" class="btn btn-primary">Add New Filter</a>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#filterModal">
            Add New Modal
        </button>
    </div>
{% endblock %}

{% block modal_layout %}
    {% include 'MainBundle/modal.html.twig' with {filters: filters} %}
{% endblock %}
