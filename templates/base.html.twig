<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Filters Test App{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body class="bg-light">
<div class="wrapper">
    <div class="main-panel">
        <div class="main-content py-4">
            <div class="container-fluid">
                <div class="row">
                    <!-- Left Sidebar -->
                    <div class="col-md-1 bg-white shadow-sm p-3 min-vh-100 border-end">
                        <h5 class="mb-3 text-center text-secondary">Navigation</h5>
                        <ul class="nav flex-column" id="sidebar-nav">
                            <li class="nav-item">
                                <a class="nav-link active fw-bold text-primary" href="#" data-list="filters">
                                    <i class="bi bi-filter"></i> Filters
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-list="list1">
                                    <i class="bi bi-list-task"></i> List 1
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-list="list2">
                                    <i class="bi bi-card-list"></i> List 2
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Right Content Area -->
                    <div class="col-md-11">
                        {% block body %}
                        {% block layout_buttons %}
                            <div class="layout-buttons mb-3">
                                {% block buttons %}{% endblock %}
                            </div>
                        {% endblock %}

                        <hr class="mb-4">

                        {% block content %}{% endblock %}
                    </div>
                {% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
